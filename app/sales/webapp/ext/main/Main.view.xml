<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    controllerName="sales.ext.main.Main"
>
    <IconTabBar class="sapUiResponsiveContentPadding">
        <items>
            <IconTabFilter
                icon="sap-icon://receipt"
                text="Scheme"
                key="scheme"
            >
                <viz:VizFrame
                    id="idSchema"
                    vizType="stacked_column"
                    width="100%"
                    height="40rem"
                    uiConfig="{applicationSet:'fiori'}"
                />
            </IconTabFilter>
            <IconTabFilter
                icon="sap-icon://map-2"
                text="Region"
                key="region"
            >
                <viz:VizFrame
                    id="idRegion"
                    vizType="stacked_column"
                    width="100%"
                    height="40rem"
                    uiConfig="{applicationSet:'fiori'}"
                />
            </IconTabFilter>
        </items>
    </IconTabBar>
</mvc:View>
